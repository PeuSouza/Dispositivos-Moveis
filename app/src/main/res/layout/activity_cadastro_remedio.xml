<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".CadastroRemedio">


    <TextView
        android:id="@+id/title_cadastro_medicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_cadastro_medicamento"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:id="@+id/conteinerCadastroRemedio"
        style="@style/ConteinerCadstroRemedio"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_cadastro_medicamento" />


    <EditText
        android:id="@+id/edit_nomeComercial"
        style="@style/Edit_Text"
        android:hint="Nome Comercial"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/conteinerCadastroRemedio"
        app:layout_constraintStart_toStartOf="@id/conteinerCadastroRemedio"
        app:layout_constraintEnd_toEndOf="@id/conteinerCadastroRemedio" />

    <EditText
        android:id="@+id/edit_principioAtivo"
        style="@style/Edit_Text"
        android:hint="Principio Ativo"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_nomeComercial"
        app:layout_constraintStart_toStartOf="@id/conteinerCadastroRemedio"
        app:layout_constraintEnd_toEndOf="@id/conteinerCadastroRemedio" />

    <EditText
        android:id="@+id/edit_dosagem"
        style="@style/Edit_Text"
        android:hint="Dosagem"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_principioAtivo"
        app:layout_constraintStart_toStartOf="@id/conteinerCadastroRemedio"
        app:layout_constraintEnd_toEndOf="@id/conteinerCadastroRemedio" />

    <EditText
        android:id="@+id/edit_formato"
        style="@style/Edit_Text"
        android:hint="Formato"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_dosagem"
        app:layout_constraintStart_toStartOf="@id/conteinerCadastroRemedio"
        app:layout_constraintEnd_toEndOf="@id/conteinerCadastroRemedio" />

    <EditText
        android:id="@+id/edit_validade"
        style="@style/Edit_Text"
        android:hint="Validade: DD/MM/AAAA"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_formato"
        app:layout_constraintStart_toStartOf="@id/conteinerCadastroRemedio"
        app:layout_constraintEnd_toEndOf="@id/conteinerCadastroRemedio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_cadastrar_remedio"
        style="@style/Button"
        android:text="Cadastrar Remedio"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/conteinerCadastroRemedio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>